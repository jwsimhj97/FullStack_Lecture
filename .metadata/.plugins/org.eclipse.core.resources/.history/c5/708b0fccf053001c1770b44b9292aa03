package com.rom802;

public class Ex07 {
	public static void main(String[] args) {
		// 대입 연산자
		
		int a;
		a=2;
//		a=a+1;
//		a+=1;
//		a+=2;	// a=a+2;
//		a-=2;	// a=a-2;
//		a*=2;	// a=a*2;
//		a/=2;	// a=a/2;
//		a%=2;	// a=a%2;
		a<2;
		a+=3*2+1; // a=a+3*2+1이 아님
		// a = a + (3*2+1); 과 같게됨
		System.out.println(a);
	}
}
