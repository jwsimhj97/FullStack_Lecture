package com.rom802;

public class Ex12 {

	public static void main(String[] args) {
		java.util.Scanner sc=new java.util.Scanner(System.in);
		String title = "학생성적관리프로그램(ver 0.1.0)";
		
		System.out.println(title);
		
//		String kor1, eng1, math1, kor2, eng2, math2, kor3, eng3, math3;
		String[] kor=new String[3];
		String[] eng=new String[3];
		String[] math=new String[3];
		
		System.out.print("1학번 국어");
		kor1=sc.nextLine();
		System.out.print("1학번 영어");
		eng1 = sc.nextLine();
		System.out.print("1학번 수학");
		math1 = sc.nextLine();
		System.out.print("2학번 국어");
		kor2=sc.nextLine();
		System.out.print("2학번 영어");
		eng2 = sc.nextLine();
		System.out.print("2학번 수학");
		math2 = sc.nextLine();
		System.out.print("3학번 국어");
		kor3=sc.nextLine();
		System.out.print("3학번 영어");
		eng3 = sc.nextLine();
		System.out.print("3학번 수학");
		math3 = sc.nextLine();
		
		System.out.println("--------------------------------------");
		System.out.println("학번	|국어	|영어	|수학");
		System.out.println("--------------------------------------");
		System.out.println("1\t"+kor1+"\t"+eng1+"\t"+math1);
		System.out.println("2\t"+kor2+"\t"+eng2+"\t"+math2);
		System.out.println("3\t"+kor3+"\t"+eng3+"\t"+math3);
		System.out.println("--------------------------------------");
		
		//	입력 받는 것 까지만 얘기하고 풀었으면 이렇게 다들 잘 풀었겠지 
	}
	
}
