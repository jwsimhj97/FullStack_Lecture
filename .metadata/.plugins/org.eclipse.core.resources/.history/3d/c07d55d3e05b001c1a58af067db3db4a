	public static void main(String[] args) {
		Car mycar=new Car("»¡°­»ö", "¸ð´×", 120);
		mycar.color="»¡°­»ö";
		mycar.max=120;
		mycar.speedShow();
		for(int i=0; i<20; i++) {
			mycar.speedUp();
			mycar.speedShow();
		}
		mycar.color="³ë¶û»ö";
		for(int i=0; i<20; i++) {
			mycar.speedDown();
			mycar.speedShow();
		}
		
		
		mycar=new Car("Áã»ö","k3",150);
		mycar.max=180;
		mycar.speedShow();
		for(int i=0; i<20; i++) {
			mycar.speedUp();
			mycar.speedShow();
		}
		for(int i=0; i<20; i++) {
			mycar.speedDown();
			mycar.speedShow();
		}
	}

}
