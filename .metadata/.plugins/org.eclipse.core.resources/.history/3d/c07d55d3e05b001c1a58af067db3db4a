package com.rom802;

class Car {
	public String color;
	public final String name;
	public int speed;
	public int max;
	
	public Car(String color, String name, int max){
		this.color = color;
		this.name = name;
		this.max = max;
	}
	
	public void speedUp(){
		if (speed+10>max){
			speed=max;
		}else{
			speed+=10;
		}
	}
	public void speedDown(){
		if(speed-10<0){
			speed=0;
		}else{
			speed-=10;
		}
	}
	public void speedShow(){
		System.out.println(color+" "+name+"ÀÇ ¼Óµµ´Â"+speed+"km ÀÔ´Ï´Ù");
	}
}

