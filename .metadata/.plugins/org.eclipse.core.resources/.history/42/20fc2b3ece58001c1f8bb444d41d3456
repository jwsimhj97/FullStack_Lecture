package day211209;

public class Ex08 {

	public static void main(String[] args) {
		java.util.Scanner sc = new java.util.Scanner(System.in);
		boolean boo = true;		// 반복문 탈출 제어
		int input=2;
		int cnt=0;
		while (boo) {
			System.out.print("1.입력 2.출력 0.종료>");
			sc.nextLine();
			if (input==1) {
				cnt++;
				System.out.print("국어>");
				sc.nextLine();
				System.out.print("영어>");
				sc.nextLine();
				System.out.print("수학>");
				sc.nextLine();
			} else if (input == 2) {
				System.out.println("---------------------------------------------------------------");
				System.out.println("국어	|영어	|수학");
				System.out.println("---------------------------------------------------------------");
				System.out.println("00	|00	|00");
				System.out.println("---------------------------------------------------------------");
			} else if (input == 0) {
				boo=false;
			}
		}		// 이렇게까지만 하면 ui 완성
	}
}
