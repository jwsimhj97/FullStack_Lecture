package day211209;

public class Ex01 {

	public static void main(String[] args) {
		java.util.Scanner sc = new java.util.Scanner(System.in);
		int me, com;
		
		me=1;
		com=1;
		System.out.println("게임을 시작하겠습니다");
		
		System.out.println("1.가위 2.바위 3.보");
		String input = sc.nextLine();
		me = Integer.parseInt(input);
		
		if (me==1) {
			
			System.out.println("me:가위"+",com"+"가위");	// me가 뭐냐에 따라서 가위바위보로 나눠서 출력하면 됨
		} else if (me==2) {
			System.out.println("me:바위"+",com"+"가위");
		} else if (me==3) {
			System.out.println("me:보"+",com"+"가위");
		}
		
		
		System.out.println("1.가위 2.바위 3.보");
		sc.nextLine();
		System.out.println("me:"+"가위"+",com"+"가위");

		System.out.println("1.가위 2.바위 3.보");
		sc.nextLine();
		System.out.println("me:"+"가위"+",com"+"가위");
		
		System.out.println("0승3무0패");
		System.out.println("이용해주셔서 감사합니다");
	}

}
