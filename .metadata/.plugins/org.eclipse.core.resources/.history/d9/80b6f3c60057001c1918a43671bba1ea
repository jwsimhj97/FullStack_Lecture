package com.rom802;

public class Ex02 {

	
	public static void main(String[] args) {
		String msg="";
		
		for (int i=1; i<=3; i++) {
			for (int j=1; j<=i; j++) {
				msg+='*'+" ";
			}
			msg+='\n';
		}
		System.out.println(msg);
		
		
		
		for (int i=1; i<=3; i++) {
			for (int j=1; j<=i; i++) {
				System.out.print(j+" ");
			}
			System.out.println();
		}
		
		
		
	}
}
