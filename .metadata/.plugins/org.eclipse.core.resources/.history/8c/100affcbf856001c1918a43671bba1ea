package com.rom802;

public class Ex01 {

	public static void main(String[] args) {
		for (int i=1; i<=3; i++) {
			for (int j=0+i; j<3+i; j++) {
				System.out.print(j);
			}
			System.out.println();
		}
	}

}

// 3 줄을 찍는데 그 한 줄 한줄에서도 별이 세 번 반복이다
// 한 줄을 세 번 출력 했는데
// 그 한 줄이 동일하니까 반복문으로

// 1 2 3
// 4 5 6
// 7 8 9