package com.rom802;

public class Ex06 {

	public static void main(String[] args) {
		// 제어문 - 반복문 - while문
		// 제어문 - 반복문 - do~while문
		
		// while(조건-boolean) {
		// 	실행문;
		// }		
		
//		int su=5;
//		while(su<5) {		// 애초에 조건이 맞지 않으면 한 번도 수행되지 않고 끝남
//			System.out.println("반복" + su);
//			su++;
//		}
		
		int su=20;
		do {
			System.out.println("반복" + su);
			su++;
		} while (su<5);
		
		// 조건을 만족하지 않을지라도 일단 수행하고 봄
	}

}
