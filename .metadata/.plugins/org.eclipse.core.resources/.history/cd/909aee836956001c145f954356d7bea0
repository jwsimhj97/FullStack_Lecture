package com.rom802;

public class Ex06 {
	public static void main(String[] args) {
		
		// Q1.
		for (int i=0; i<3; i++) {
			for (int j=0; j<3; j++) {
				System.out.println("* ");				
			}
			System.out.println();
		}
	
		
		// Q2.
		for (int i=0; i<9; i+=3) {
			for (int j=1; j<=3; j++) {
				System.out.println(i+j+" ");
			}
			System.out.println();
		}
		
		
		// Q3.
		for (int i=1; i<=3; i++) {
			for (int j=0; j<=2; j++) {
				System.out.println(i+j+" ");
			}
			System.out.println();
		}
		

		
		// Q4.
	}
}
