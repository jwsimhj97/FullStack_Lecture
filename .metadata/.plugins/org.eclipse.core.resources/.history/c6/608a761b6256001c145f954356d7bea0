package com.rom802;

public class Ex04 {

	public static void main(String[] args) {
		
		boolean re=false;
		
		int kor, eng, math;
		kor = 96;
		eng = 69;
		math = 1;
		
		int sum = kor+eng+math;
		double avg = sum*100/3/100.0;
		
		char score;
		
		if (avg >= 90) {
			score = 'A';
		} else if (avg >= 80) {
			score = 'B';
		} else if (avg >= 70) {
			score = 'C';
		} else if (avg >= 60) {
			score = 'D';
		} else {
			score = 'F';
			re = true;
		}
		
		String result = "";
		
		result += "-----------------------------------------------------\n";
		result += "국어:"+kor+"\t\t"+"| 영어:"+eng+"\t\t"+"| 수학:"+math+"\n";
		result += "-----------------------------------------------------\n";
		result += "합계:"+sum+"\n";
		result += "평균:"+avg+"\n";
		result += "-----------------------------------------------------\n";
		result += "학점:"+score+"\n";
		
		if (re) {
			result += "\t재수강하세요\n";
		}
		
		System.out.println(result);
	}

	
	// 문자열 활용
	String msg="";
	
	
	
	Sytem.out.println(msg);
	
	

	System.out.println("-----------------------------------------------------");
	System.out.println("국어:96		| 영어:69		| 수학:1");
	System.out.println("-----------------------------------------------------");
	System.out.println("합계:166");
	System.out.println("평균:55.33");
	System.out.println("-----------------------------------------------------");
	System.out.println("학점:F");
	System.out.println("	재수강하세요");
	
	
}
