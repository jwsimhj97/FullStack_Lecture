package com.rom802;

class Ball{
	int num;	// 공 번호 바뀌면 안되니까
	boolean marking;
	Ball(int num){
		this.num=num;
		marking=true;
	}
	
}

public class Ex12 {

	public static void main(String[] args) {
		String[] note=new String[6];
		
		Ball[] box=new Ball[45];
		for(int i=0; i<box.length; i++){
			box[i]=new Ball(i+1);
		}
		
		for(int i=0; i<note.length; i++){
			// 공을 꺼내고
			int ran=(int)(Math.random()*45);
			Ball ball=box[ran];
			// 확인
			if(ball.marking){
			//		(안뽑은공)note 작성
				note[i]="공"+ball.num;
			//		뽑았다고 marking
				ball.marking=false;
			}else{
			//		(뽑았던공)note--;
				i--;
			}
		}
		
		for(int i=0; i<note.length; i++){
			System.out.println(note[i]);
		}

	}

}
