package com.rom802;

public class Ex03 {

	public static void main(String[] args) {
		//q1
		System.out.println("Q1. 1~10까지 짝수들을 출력하시오");
		
		for (int i=1; i<=10; i++) {
			if (i%2 == 0) System.out.println(i);
		}
		
		
		//q2
		System.out.println("\nQ2. A~Z까지 출력하시오");
		
		for (int i='A'; i<='Z'; i++) {
			System.out.println((char)i);
		}
		
		
		//q3
		System.out.println("\nQ3. 1, 3, 5, 7, 9 를 출력하시오");
		
		for (int i=0; i<10; i++) {
			if (i%2 != 0) System.out.println(i);
		}
		
		
		//q4
		System.out.println("\nQ4. 1+3+5+7+9=000를 출력하시오");
		
		int sum=0;
		int n;
		
		for(int i=0; i<5; i++) {
			n = 2*i+1;
			if (i < 5-1) System.out.print(n+"+");
			else System.out.print(n+"=");			// 끝 부분 하나를 위해 조건문 두기 vs for문 바깥에 예외 코드 짜기
			sum += n;
		}
		System.out.println(sum);
		
		
		//q5
		System.out.println("\nQ5. 1~50 중 4의 배수를 출력하시오");
		
		for (int i=1; i<=50; i++) {
			if (i%4 == 0) System.out.println(i);
		}
	}
}