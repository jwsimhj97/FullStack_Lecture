package com.rom802;

public class Ex03 {

	public static void main(String[] args) {
		for (int i=0; i<1; i++) {
			System.out.print("*");
		}
		System.out.println();
		for (int i=0; i<2; i++) {
			System.out.print("*");
		}
		System.out.println();
		for (int i=0; i<3; i++) {  // 여기서 i<3 이 부분만 바꿔주면 되겠네
			System.out.print("*");
		}
		System.out.println();
	}

}
