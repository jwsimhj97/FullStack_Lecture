package day211209;

public class Ex01 {

	public static void main(String[] args) {
		java.util.Scanner sc = new java.util.Scanner(System.in);
		int me, com;
		
		me=1;
		com=1;
		System.out.println("게임을 시작하겠습니다");
		
		System.out.println("1.가위 2.바위 3.보");
		String input = sc.nextLine();
		me = Integer.parseInt(input);
		com=(int)(Math.random()*3)+1; 
		System.out.print("me:");
		if (me==1 && com==1) {
			System.out.println("가위"+",com:가위");
		} else if(me==1 && com==2) {
			System.out.println("가위"+",com:바위");
		} else if (me==1 && com==3) {
			System.out.println("가위"+",com:보");
		} else if (me==2 && com==1) {
			System.out.println("바위"+",com:가위");
		} else if(me==2 && com==2) {
			System.out.println("바위"+",com:바위");
		} else if (me==2 && com==3) {
			System.out.println("바위"+",com:보");
		} else if (me==3 && com==1) {
			System.out.println("보"+",com:가위");
		} else if(me==3 && com==2) {
			System.out.println("보"+",com:바위");
		} else if (me==3 && com==3) {
			System.out.println("보"+",com:보");
		}
		
		if ((me==1 && com==3) || (me==2 && com==1) || (me==3 && com==2)) {
			System.out.println("이겼음");
		} else if (me==com) {
			System.out.println("비겼음");
		} else if () {
			System.out.println("졌음");
		}
		
		
		System.out.println("0승3무0패");
		System.out.println("이용해주셔서 감사합니다");
	}

}
